<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/busNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:text="ABC: Bus Name"
        android:textColor="@color/colorTextPrimary"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/busStopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/busNameText"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Bus stop"
        android:textColor="@color/colorTextSecondary"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/estimatedArrivalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/timeLeftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeLeftText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="42"
                android:textColor="@color/colorTextPrimary"
                android:textSize="200sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/minText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="MIN"
                android:textColor="@color/colorTextPrimary"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrivalTimeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeLeftLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-40dp">

            <TextView
                android:id="@+id/arrivalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:48"
                android:textColor="@color/colorTextSecondary"
                android:textSize="60sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pmText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="PM"
                android:textColor="@color/colorTextSecondary"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0sp"
        android:background="@color/black_overlay"
        android:text="next stop"
        android:textAllCaps="true"
        android:textColor="@color/colorTextPrimary"
        android:textSize="25dp" />

</RelativeLayout>
